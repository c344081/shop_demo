/* pages/details/details.wxss */
.base-style {
    background-color: #f0f0f0;
}
.base-style .slider {
    height: 750rpx;
    background-color: #f0f0f0;
}
.base-style .slider image {
    width: 100%;
    height: 100%;
}

.base-style .info {
    background-color: #fff;
    border: solid 1px #eee;
    border-width: 1px 0;
    padding: 10rpx 0;
}
.base-style .info .mod {
    padding: 10rpx 20rpx;
}
.base-style .info .title {
    font-size: 32rpx;
}
.base-style .info .subinfo {
    font-size: 24rpx;
    color: grey;
}
.base-style .info .price {
    color: #f5692e;
    font-size: 24rpx;
}
.base-style .info .price .strong {
    display: inline;
    font-size: 48rpx;
    font-weight: bold;
    margin-left: 5rpx;
}

.base-style .info-module {
    margin-top: 20rpx;
    background-color: #fff;
}
.base-style .info-module .title {
    padding: 20rpx;
    border-left: solid 6rpx #f5692e;
    color: #f5692e;
    font-size: 32rpx;
}
.base-style .spec .table {
    display: flex;
    flex-wrap: wrap;
    border-top: solid 1px #eee;
}
.base-style .spec .table .cell {
    width: 50%;
    border-right: 1px;
    font-size: 24rpx;
}
.base-style .spec .table .cell view {
    border: solid 1px #eee;
    border-width: 0 1px 1px 0px;
    padding: 20rpx;
}

.base-style .more {
    margin-bottom: 100rpx;
}
.base-style .more image {
    width: 750rpx;
}

.base-style .toolbar {
    width: 100%;
    height: 100rpx;
    border-top: solid 1px #eee;
    background-color: #fff;
    position: fixed;
    bottom: 0;
    left: 0;
}
.base-style .toolbar .cart-aera {
    position: relative;
    height: 60rpx;
    width: 60rpx;
    padding: 20rpx;
    margin-left: 20rpx;
    display: inline-block;
}
.base-style .toolbar .cart-aera .num {
    background-color: #eb2243;
    color: #fff;
    width: 36rpx;
    height: 36rpx;
    border-radius: 50%;
    text-align: center;
    line-height: 36rpx;
    font-size: 20rpx;
    position: absolute;
    left: 50%;
    margin: 5rpx;
    top: 15rpx;
}
.base-style .toolbar .button {
    background-color: #ff712b;
    color: #fff;
    height: 100%;
    width: 220rpx;
    font-size: 28rpx;
    float: right;
    text-align: center;
    line-height: 100rpx;
}