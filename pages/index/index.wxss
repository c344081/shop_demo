/* pages/index/index.wxss */
@import "../../views/home/home.wxss";
@import "../../views/sort/sort.wxss";
@import "../../views/cart/cart.wxss";
@import "../../views/mine/mine.wxss";

.toolbar {
    display: flex;
    height: 100rpx;
    width: 100%;
    position: fixed;
    bottom: 0;
    background-color: #fff;
    border-top: solid 1rpx #eee;
    box-sizing: border-box;
}

.toolbar .tab {
    flex-grow: 1;
    text-align: center;
    font-size: 24rpx;
    color: #888;
    position: relative;
}

.toolbar .tab .icon {
    display: block; 
    margin: 0 auto;
    margin-top: 10rpx;
}

.toolbar .tab.current {
    color: #f5692e;
}